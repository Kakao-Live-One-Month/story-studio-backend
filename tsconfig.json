{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "src/services/payment/types"]
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true,
    "transpileOnly": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}

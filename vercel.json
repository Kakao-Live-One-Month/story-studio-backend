{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "functions": {
      "api/story.js": {
        "memory": 1024,
        "maxDuration": 30
      },
      "api/payment.js": {
        "memory": 1024,
        "maxDuration": 30
      },
      "api/pdf.js": {
        "memory": 1024,
        "maxDuration": 30
      },
      "api/upload.js": {
        "memory": 1024,
        "maxDuration": 30
      }
    },
    "rewrites": [
      {
        "source": "/api/story/(.*)",
        "destination": "/api/story.js"
      },
      {
        "source": "/api/payment/(.*)",
        "destination": "/api/payment.js"
      },
      {
        "source": "/api/pdf/(.*)",
        "destination": "/api/pdf.js"
      },
      {
        "source": "/api/upload/(.*)",
        "destination": "/api/upload.js"
      }
    ]
  }